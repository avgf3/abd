# Production Environment Variables
NODE_ENV=production
PORT=${PORT}
DATABASE_URL=${DATABASE_URL}
SESSION_SECRET=${SESSION_SECRET}
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
CORS_ORIGIN=${FRONTEND_URL}
SOCKET_TIMEOUT=30000

# Security
RATE_LIMIT_WINDOW=900000
