BCRYPT_ROUNDS=10

# File Upload
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/gif,image/webp
MAX_PROFILE_IMAGE_SIZE=5242880
MAX_BANNER_SIZE=10485760
