# TURN Server Configuration for WebRTC Audio
# هذه إعدادات لخدمة مجانية عامة - يُنصح بتغييرها لخدمة خاصة في الإنتاج

# خيار 1: استخدام خدمة OpenRelay المجانية (للتجربة فقط)
VITE_TURN_URL=turn:openrelay.metered.ca:80
VITE_TURN_USERNAME=openrelayproject
VITE_TURN_CREDENTIAL=openrelayproject

# خيار 2: Metered TURN server (أكثر استقراراً)
VITE_TURN_URL_BACKUP=turn:a.relay.metered.ca:80
VITE_TURN_USERNAME_BACKUP=e8c8b5c4c8f5a6d2a8b5
VITE_TURN_CREDENTIAL_BACKUP=7w8x9y0z1a2b3c4d5e6f

# STUN servers إضافية
VITE_STUN_URL_1=stun:stun.l.google.com:19302
VITE_STUN_URL_2=stun:stun1.l.google.com:19302
VITE_STUN_URL_3=stun:stun.relay.metered.ca:80

# إعدادات إضافية للنظام الصوتي
VITE_ENABLE_AUDIO_BROADCAST=true
VITE_MAX_SPEAKERS=10
VITE_AUDIO_QUALITY=high
VITE_ENABLE_ECHO_CANCELLATION=true
VITE_ENABLE_NOISE_SUPPRESSION=true
VITE_ENABLE_AUTO_GAIN_CONTROL=true

# إعدادات الاتصال
VITE_WEBRTC_RECONNECT_ATTEMPTS=5
VITE_WEBRTC_RECONNECT_DELAY=2000
VITE_ICE_CONNECTION_TIMEOUT=15000

# للتطوير المحلي
VITE_ALLOW_HTTP_AUDIO=true # السماح بالصوت على HTTP في localhost فقط