# ===============================
# مثال ملف البيئة (.env.example)
# انسخ هذا الملف إلى .env واملأ القيم المناسبة
# ===============================

# بيئة التشغيل
NODE_ENV=production
PORT=5000

# قاعدة البيانات (PostgreSQL/Supabase/Neon)
# مثال: postgres://USER:PASSWORD@HOST:PORT/DBNAME
DATABASE_URL=postgres://USER:PASSWORD@HOST:5432/DBNAME

# الأصول المسموح بها عبر CORS (اختياري لكنه موصى به للإنتاج)
# ضَع رابط الواجهة النهائية والدومين المسموح
FRONTEND_URL=https://your-frontend-domain.com
CORS_ORIGIN=https://your-frontend-domain.com
RENDER_EXTERNAL_URL=https://your-app.onrender.com

# أسرار الأمان (غيّرها لقيم قوية وطويلة)
JWT_SECRET=change-me-please-to-a-long-random-secret
SESSION_SECRET=change-me-please-to-a-long-random-secret
ENCRYPTION_KEY=change-me-please-to-a-long-random-secret

# ضبط صارم لمحتوى البالغين (اختياري)
ADULT_CONTENT_STRICT=false

# ملاحظات:
# - لا ترفع ملف .env إلى مستودع Git العام أبداً.
# - استخدم أسرار بيئة الاستضافة لإدارة القيم الحساسة.
# Environment Configuration
NODE_ENV=production
PORT=10000

# Render Deployment
RENDER_EXTERNAL_URL=https://abd-gmva.onrender.com

# Database (if needed)
DATABASE_URL=

# Security Keys (generate new ones for production)
JWT_SECRET=your-super-secret-jwt-key-here
SESSION_SECRET=your-super-secret-session-key-here

# Features
ENABLE_WEBSOCKET=true
SOCKET_IO_CORS_ORIGIN=https://abd-gmva.onrender.com