NODE_ENV=development
PORT=5000
DOMAIN=localhost

# Bot system configuration
BOT_TOTAL=50
BOT_OWNER_COUNT=5
BOT_USE_PROXIES=false
BOT_BATCH_SIZE=5
BOT_BATCH_DELAY_MS=8000

# Security keys
JWT_SECRET=change-me-please
SESSION_SECRET=change-me-too
BOT_OWNER_KEY=your-secret-key
BOT_MASTER_SECRET=owner-master-2024-secret

# CORS/Frontend (adjust as needed)
FRONTEND_URL=http://localhost:5173
RENDER_EXTERNAL_URL=
CORS_ORIGIN=
# قاعدة البيانات
DATABASE_URL=postgresql://user:password@host:port/database?sslmode=require

# إعدادات الخادم
NODE_ENV=production
PORT=10000

# إعدادات الأمان
JWT_SECRET=your-secret-jwt-key-here
SESSION_SECRET=your-secret-session-key-here

# إعدادات CORS (اختياري)
CORS_ORIGIN=https://your-domain.com
FRONTEND_URL=https://your-domain.com
RENDER_EXTERNAL_URL=https://your-app.onrender.com

# إعدادات Socket.IO
ENABLE_WEBSOCKET=true
SOCKET_IO_POLLING_ONLY=false

# إعدادات الرفع (اختياري)
MAX_UPLOAD_SIZE=10485760
UPLOAD_PATH=/uploads

