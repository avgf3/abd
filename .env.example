# قاعدة البيانات
# إذا كنت تستخدم PgBouncer/Supabase Pooler استخدم رابط الـ pooler وأضف USE_PGBOUNCER=true
# مثال Supabase Pooler: postgresql://USER:PASSWORD@aws-0-us-east-1.pooler.supabase.com:6543/postgres?sslmode=require
DATABASE_URL=postgresql://user:password@host:port/database?sslmode=require
USE_PGBOUNCER=true
# حدود المجمع الآمنة للتعامل مع ~8K WebSocket
DB_POOL_MAX=50
DB_POOL_MIN=0
DB_IDLE_TIMEOUT=60
DB_MAX_LIFETIME=1800
DB_CONNECT_TIMEOUT=30

# إعدادات الخادم
NODE_ENV=production
PORT=10000

# إعدادات الأمان
JWT_SECRET=your-secret-jwt-key-here
SESSION_SECRET=your-secret-session-key-here

# إعدادات CORS (اختياري)
CORS_ORIGIN=https://your-domain.com
FRONTEND_URL=https://your-domain.com
RENDER_EXTERNAL_URL=https://your-app.onrender.com

# إعدادات Socket.IO
ENABLE_WEBSOCKET=true
SOCKET_IO_POLLING_ONLY=false

# إعدادات الرفع (اختياري)
MAX_UPLOAD_SIZE=10485760
UPLOAD_PATH=/uploads

# إعدادات التطوير (للتطوير المحلي فقط)
# NODE_ENV=development
# PORT=5000

# Redis للحضور والكاش
# مثال: redis://default:password@localhost:6379
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_TLS=false