# قاعدة البيانات PostgreSQL (مطلوب)
DATABASE_URL=postgresql://user:password@host:port/database?sslmode=require

# منفذ السيرفر (اختياري - الافتراضي 3000)
PORT=3000

# بيئة التشغيل (development | production | test)
NODE_ENV=development

# مفتاح جلسة المصادقة (مطلوب)
SESSION_SECRET=your-secret-key-here

# إعدادات التحميل (اختياري)
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=.jpg,.jpeg,.png,.gif,.webp

# إعدادات Socket.io (اختياري)
SOCKET_PING_TIMEOUT=60000
SOCKET_PING_INTERVAL=25000

# إعدادات الأمان (اختياري)
RATE_LIMIT_WINDOW=900000  # 15 دقيقة
RATE_LIMIT_MAX_REQUESTS=100

# إعدادات Replit (اختياري - يتم اكتشافها تلقائياً)
REPL_ID=
REPL_OWNER=
REPLIT_DB_URL=