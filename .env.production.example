# إعدادات الإنتاج لدعم 3000 متصل متزامن

# إعدادات قاعدة البيانات
DATABASE_URL=your_database_url_here
SUPABASE_URL=your_supabase_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# إعدادات Redis للتوسع الأفقي (مطلوب للـ clustering)
REDIS_URL=redis://your_redis_url_here
REDIS_PASSWORD=your_redis_password_here
REDIS_TLS=false

# إعدادات الاتصالات المتزامنة
MAX_CONCURRENT_CONNECTIONS=3000
MAX_CONNECTIONS_PER_IP=50

# إعدادات Socket.IO المحسّنة
SOCKET_IO_POLLING_ONLY=false

# إعدادات الأمان
CORS_ORIGIN=https://your-domain.com
RENDER_EXTERNAL_URL=https://your-app.onrender.com
FRONTEND_URL=https://your-domain.com

# إعدادات JWT
JWT_SECRET=your_super_secure_jwt_secret_here
JWT_EXPIRES_IN=24h

# إعدادات أخرى
NODE_ENV=production
PORT=10000

# إعدادات تحسين الأداء
UV_THREADPOOL_SIZE=128
NODE_OPTIONS="--max-old-space-size=2048 --enable-source-maps"