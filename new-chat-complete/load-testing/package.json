{
  "name": "load-testing-suite",
  "version": "1.0.0",
  "description": "Comprehensive load testing suite for chat application",
  "main": "index.js",
  "scripts": {
    "install:tools": "./scripts/install-tools.sh",
    "test:all": "node scripts/run-all-tests.js",
    "test:k6:http": "k6 run -e BASE_URL=http://localhost:5000 scenarios/k6-http-test.js",
    "test:k6:ws": "k6 run -e WS_URL=ws://localhost:5000 scenarios/k6-websocket-test.js",
    "test:artillery": "artillery run --target http://localhost:5000 scenarios/artillery-socketio.yml",
    "test:autocannon": "node scenarios/autocannon-http.js all",
    "monitor": "node scripts/monitor-system.js",
    "analyze": "node scripts/analyze-results.js",
    "clean": "rm -rf results/*.json results/*.html results/*.pdf",
    "report": "npm run analyze && open results/analysis-report-*.html"
  },
  "keywords": [
    "load-testing",
    "performance",
    "k6",
    "artillery",
    "autocannon",
    "websocket",
    "socket.io"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "chalk": "^5.3.0",
    "cli-table3": "^0.6.3",
    "faker": "^5.5.3",
    "ora": "^6.1.2",
    "pdfkit": "^0.14.0",
    "socket.io-client": "^4.5.4",
    "systeminformation": "^5.21.20"
  },
  "devDependencies": {
    "autocannon": "^7.14.0",
    "artillery": "^2.0.0",
    "artillery-plugin-expect": "^2.0.0",
    "artillery-plugin-metrics-by-endpoint": "^1.0.0"
  }
}