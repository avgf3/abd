# بيئة التطبيق
NODE_ENV=development

# إعدادات قاعدة البيانات
# استخدام PostgreSQL مع schema public
DATABASE_URL=postgresql://username:password@localhost:5432/chatapp

# للاختبار المحلي يمكن استخدام SQLite
# DATABASE_URL=sqlite:./chat.db

# إعدادات الجلسة
SESSION_SECRET=chat_app_secret_key_2025_arabic_chat_secure_session

# إعدادات الخادم
PORT=5000
HOST=0.0.0.0

# إعدادات CORS
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5000,http://localhost:3000

# إعدادات رفع الملفات
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./client/public/uploads

# إعدادات الأمان
BCRYPT_ROUNDS=12
JWT_SECRET=arabic_chat_jwt_secret_2025

# إعدادات Socket.io
SOCKET_IO_ORIGINS=http://localhost:5173,http://localhost:5000
